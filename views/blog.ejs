<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-4 mb-3">
      <h1><%= blog.title %></h1>
      <img class="mt-2" src="<%= blog.coverImageURL %>" width="700px" />
      <pre class="mt-4"><%= blog.body %></pre>
    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" width="60px" alt=""> <%= blog.createdBy.fullName %>
    </div>
    <% if (locals.user) { %>
     <div class="container mt-3">
      <h2>Comments (<%= comments.length %>) 
      </h1>
      <form action="/blog/comment/<%=blog._id%>" method="POST">
        <div class="mt-2">
           <textarea class="form-control" name="content" id="content" placeholder="Enter your comment" required></textarea>
        </div>
         <button type="submit" class="btn btn-primary mt-3">Add Comment</button>
      </form>
    </div>
    <% } %>
    <div class="container mt-3">
      <% comments.forEach(comment => { %>
      <div class= mt-2>
       <img src="<%= comment.createdBy.profileImageURL %>" width="60px" alt=""> <%= comment.createdBy.fullName %> : <%= comment.content %>
    </div>
    <% }) %>
    </div>
    </div>
    <%- include("./partials/scripts") %>
  </body>
</html>
